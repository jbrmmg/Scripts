<?xml version="1.0"?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>DeployScripts</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>src/main/resources/bash/</directory>
            <outputDirectory>deploy</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>0775</fileMode>
            <filtered>true</filtered>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>src/main/resources/bash/BlankDeploy.sh</source>
            <outputDirectory>/</outputDirectory>
            <destName>pre_deploy.sh</destName>
            <fileMode>0775</fileMode>
            <filtered>true</filtered>
        </file>
        <file>
            <source>src/main/resources/bash/BlankDeploy.sh</source>
            <outputDirectory>/</outputDirectory>
            <destName>post_deploy.sh</destName>
            <fileMode>0775</fileMode>
            <filtered>true</filtered>
        </file>
        <file>
            <source>src/main/resources/other/deployment/release.txt</source>
            <outputDirectory>/</outputDirectory>
            <destName>maven-releases-DeploymentDir.txt</destName>
            <fileMode>0664</fileMode>
        </file>
        <file>
            <source>src/main/resources/other/deployment/development.txt</source>
            <outputDirectory>/</outputDirectory>
            <destName>maven-snapshots-DeploymentDir.txt</destName>
            <fileMode>0664</fileMode>
        </file>
    </files>
</assembly>
